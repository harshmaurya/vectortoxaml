<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:widgets="clr-namespace:Common.Widgets;assembly=Common.Widgets">

    <Style TargetType="{x:Type widgets:IconButton}">
        <Setter Property="Foreground" Value="{DynamicResource SecondaryForeground}"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>